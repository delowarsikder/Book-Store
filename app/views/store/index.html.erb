<h1><%= t('.title_html')%></h1>

<div id="products">
  <%= render 'home/table_header'%>
  <% @items.each do |item| %>
  <tbody>
      <tr>
        <td><%= item.title %></td>
        <td><%= sanitize(item.description) %></td>
        <td> <%= image_tag(item.image_url)%></td>
        <td ><%=number_to_currency(item.price) %></td>
        <td><%= button_to t('.add_html'), line_items_path(product_id: item,locale:I18n.locale),remote: true, method: :post, class:"btn btn-primary" %>
        <br>
        </td>
      </tr>
    </tbody>

  <% end %>

  </table> 
</div>
