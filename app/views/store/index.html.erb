<h1>Products Catalog</h1>

<div id="products">
  <%= render 'home/table_header'%>
  <% @items.each do |item| %>
  <tbody>
      <tr>
        <td><%= item.title %></td>
        <td><%= sanitize(item.description) %></td>
        <td> <%= image_tag(item.image_url)%></td>
        <td ><%=sprintf("$%0.02f", item.price) %></td>
        <td><%= link_to "Add",line_items_path(product_id: item), class:"btn btn-primary" %>
        <br>
        </td>
      </tr>
    </tbody>

  <% end %>

  </table> 
</div>
